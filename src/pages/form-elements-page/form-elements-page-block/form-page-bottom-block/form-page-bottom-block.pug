extends ../form-page-block-layout/form-page-block-layout.pug
include ../../../../ui-kit/collapse/collapse.pug
include ../../../../ui-kit/vertical-list/vertical-list.pug
include ../../../../ui-kit/with-label/with-label.pug

block col1
    .form-page-block
        .form-page-block__column100.form-page-block--width-320
            .form-page-block__column100.form-page-block--width-266
                +collapse({label: "expandable checkbox list"})
                    +vertical-list({labelVariant: "none", variant: "checkbox", list: [{mainLabel: "Завтрак"}, {checked:"checked", mainLabel: "Письменный стол"}, {checked:"checked", mainLabel: "Стул для кормления"}, {checked:"checked", mainLabel: "Кроватка"}, {mainLabel: "Телевизор"}, {mainLabel: "Шампунь"}]})
            .form-page-block__column100.form-page-block--width-266.form-page-block--margin-top-sm
                +collapse({label: "expandable checkbox list", expanded: true}) 
                    +vertical-list({labelVariant: "none", variant: "checkbox", list: [{mainLabel: "Завтрак"}, {checked:"checked", mainLabel: "Письменный стол"}, {checked:"checked", mainLabel: "Стул для кормления"}, {checked:"checked", mainLabel: "Кроватка"}, {mainLabel: "Телевизор"}, {mainLabel: "Шампунь"}]})

block col2
    .form-page-block
        .form-page-block__column100.form-page-block--width-320
            .form-page-block__column100.form-page-block--width-266
                +vertical-list({labelLeft: "rich Checkbox Buttons",labelVariant: "md", variant: "checkbox", list: [{mainLabel: "Широкий коридор", subLabel: ["Ширина коридоров в номере", "не менее 91 см."]}, {mainLabel: "Помощник для инвалидов", subLabel: ["На 1 этаже вас встретит специалист","и проводит до номера."]}]})

block col3
    .form-page-block
        .form-page-block__column100.form-page-block--width-320
            .form-page-block__column100.form-page-block--width-266
                +vertical-list({labelLeft: "bullet list", labelVariant: "md", list: [["Нельзя с питомцами"], ["Без вечеринок и мероприятий"], ["Время прибытия — после 13:00,", "а выезд до 12:00"], ]})
