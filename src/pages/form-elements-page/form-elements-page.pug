extends ../../components/ui-kit-demostartion-layout/ui-kit-demostartion-layout.pug

block meta
    title Элементы форм
    meta(name="description", content="Demo page")
block scripts
    script(type="text/javascript", src="/libs/moment/moment.min.js")
    script(
        type="text/javascript",
        src="/libs/daterangepicker/daterangepicker.js"
    )
    script(type="text/javascript", src="/libs/mask/jquery.inputmask.js")
    script(
        type="text/javascript",
        src="/libs/ion.rangeSlider/ion.rangeSlider.min.js"
    )
    script(type="text/javascript", src="/libs/collapse/jquery.collapsable.js")

block styles
    link(
        rel="stylesheet",
        type="text/css",
        href="/libs/daterangepicker/daterangepicker.css"
    )
    link(
        rel="stylesheet",
        type="text/css",
        href="/libs/ion.rangeSlider/ion.rangeSlider.min.css"
    )

block content
    article.form-page-layout.form-page-layout--padding
        section.form-page-layout__column 
            include form-elements-page-block/form-page-top-block/form-page-top-block.pug
        section.form-page-layout__column.form-page-layout__column--margin-top 
            include form-elements-page-block/form-page-middle-block/form-page-middle-block.pug
        section.form-page-layout__column.form-page-layout__column--margin-top-sm
            include form-elements-page-block/form-page-bottom-block/form-page-bottom-block.pug
        section.form-page-layout__column.form-page-layout__column--margin-top 
            include form-elements-page-block/form-page-footer-block/form-page-footer-block.pug
