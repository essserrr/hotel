extends ../../components/main-layout/main-layout.pug
include ../../ui-kit/header/header.pug
include ../../ui-kit/footer/footer.pug
include ../../ui-kit/dropdown/dropdown.pug
include ../../ui-kit/increase-form/increase-form.pug
include ../../ui-kit/vertical-list/vertical-list.pug
include ../../ui-kit/range-slider/range-slider.pug
include ../../ui-kit/collapse/collapse.pug
include ../../ui-kit/paginator/paginator.pug
include ../../ui-kit/prebuild-cards/room/room.pug

block meta
    title Поиск комнаты
block scripts
    script(
        type="text/javascript",
        src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"
    )
    script(
        type="text/javascript",
        src="/libs/daterangepicker/daterangepicker.js"
    )
    script(type="text/javascript", src="/libs/mask/jquery.inputmask.js")
    script(
        type="text/javascript",
        src="https://cdnjs.cloudflare.com/ajax/libs/ion-rangeslider/2.3.1/js/ion.rangeSlider.min.js"
    )
    script(type="text/javascript", src="/libs/collapse/jquery.collapsable.js")
    script(
        type="text/javascript",
        src="https://cdn.jsdelivr.net/bxslider/4.2.12/jquery.bxslider.min.js"
    )
block styles
    link(
        rel="stylesheet",
        type="text/css",
        href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css"
    )
    link(
        rel="stylesheet",
        type="text/css",
        href="https://cdnjs.cloudflare.com/ajax/libs/ion-rangeslider/2.3.1/css/ion.rangeSlider.min.css"
    )
    link(
        rel="stylesheet",
        type="text/css",
        href="https://cdn.jsdelivr.net/bxslider/4.2.12/jquery.bxslider.css"
    )

block navigation
    +header({})
block content
    .search-page.search-page__row
        .search-page--width266
            div
                +dropdown({ placeholder:"ДД ММ - ДД ММ", value: "19 авг - 23 авг", labelLeft: "даты пребывания в отеле", type: "date-range"})
            div
                +dropdown({ placeholder:"Сколько гостей", value: "3 гостя, 1 младенец", labelLeft: "гости", type: "text"})
                    +increase-form({type: "guests", variant: "md", hasSubmit: true, list: [{title: "взрослые", value: 2, minValue: 0, maxValue: 5, step: 1}, {title: "дети", value: 1, minValue: 0, maxValue: 5, step: 1}, {title: "младенцы", value: 1, minValue: 0, maxValue: 5, step: 1}]})
            div 
                +range-slider({labelLeft: "диапазон цены", labelRight: "5 000₽ - 10 000₽", variant: "lg"})
            div Стоимость за сутки пребывания в номере
            div 
                +vertical-list({labelLeft: "правила дома", labelVariant: "md", variant: "checkbox", list: [{mainLabel: "Можно курить"}, {mainLabel: "Можно с питомцами"}, {mainLabel: "Можно пригласить гостей (до 10 человек)"}]})

            div 
                +vertical-list({labelLeft: "доступность",labelVariant: "md", variant: "checkbox", list: [{mainLabel: "Широкий коридор", subLabel: ["Ширина коридоров в номере", "не менее 91 см."]}, {mainLabel: "Помощник для инвалидов", subLabel: ["На 1 этаже вас встретит специалист","и проводит до номера."]}]})
            div
                +dropdown({ placeholder:"Сколько гостей", value: "2 спальни, 2 кровати, 2 ванные комнаты", labelLeft: "удобства номера", type: "text"})
                    +increase-form({type: "rooms", list: [{title: "спальни", value: 2, minValue: 0, maxValue: 5, step: 1}, {title: "кровати", value: 2, minValue: 0, maxValue: 5, step: 1}, {title: "ванные комнаты", value: 0, minValue: 0, maxValue: 5, step: 1}]})
            div
                +collapse({label: "дополнительные удобства", expanded: true}) 
                    +vertical-list({labelVariant: "none", variant: "checkbox", list: [{mainLabel: "Завтрак"}, {checked:"checked", mainLabel: "Письменный стол"}, {checked:"checked", mainLabel: "Стул для кормления"}, {checked:"checked", mainLabel: "Кроватка"}, {mainLabel: "Телевизор"}, {mainLabel: "Шампунь"}]})
        div
            div
                +room({number: "888", type: "люкс", price: "9 990", reviews: "145", checkedStars: 5, images: ["/rooms/room1.png", "/rooms/room2.png", "/rooms/room1.png", "/rooms/room2.png"]})

            div
                +room({number: "840", price: "9 900", reviews: "65", checkedStars: 4, images: ["/rooms/room2.png", "/rooms/room1.png", "/rooms/room2.png", "/rooms/room1.png"], noButtons: true})

            div
                +paginator({label: "1 – 12 из 100+ вариантов аренды", pages: [{value: "1", active: true}, {value: "2"}, {value: "3"}, {value: "...", type: "dots"}, {value: "15"}, {type: "nav"}]})

block footer
    +footer({})
