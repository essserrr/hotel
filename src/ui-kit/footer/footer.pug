include ../s-media/s-media.pug

mixin footer(props)
    - const { loggedIn = false, name = '' } = props;

    .ui-footer.ui-footer__row
        .ui-footer__column100
            .ui-footer__nav-block.ui-footer__row
                .ui-footer__column-auto
                    .ui-footer__column-auto
                        +toxin-logo
