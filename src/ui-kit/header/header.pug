include ../toxin-logo/toxin-logo.pug
include ../nav-dropdown/nav-dropdown.pug
include ../buttons/button/button.pug

mixin header(props)
    - const { loggedIn = false, name = '' } = props;

    .ui-header.ui-header__row.ui-header--align-center
        .ui-header__row
            +toxin-logo
        .ui-header__row.ui-header__row-margin.ui-header--align-center
            .ui-header__item
                +nav-dropdown({root: {node: "a", title: "О нас", href: "#", style: "bold"},})
            .ui-header__item
                +nav-dropdown({root: {node: "div", title: "Услуги"}, list: [{title: "Category One", href: "#"}, {title: "Category Two", href: "#"},{title: "Category Three", href: "#"}]})
            .ui-header__item
                +nav-dropdown({root: {node: "a", title: "Вакансии", href: "#"},})
            .ui-header__item
                +nav-dropdown({root: {node: "a", title: "Новости", href: "#"},})
            .ui-header__item
                +nav-dropdown({root: {node: "div", title: "Соглашения"}, list: [{title: "Category One", href: "#"}, {title: "Category Two", href: "#"},{title: "Category Three", href: "#"}]})
            case loggedIn
                when true
                    .ui-header__item.ui-header__name #{name}
                when false
                    .ui-header__item
                        +button({label: "войти", variant: "outlined", size: "sm"})
                    .ui-header__item
                        +button({label: "зарегистрироваться", size: "sm"})
